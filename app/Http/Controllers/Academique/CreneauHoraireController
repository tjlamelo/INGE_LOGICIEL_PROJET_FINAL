<?php

namespace App\Http\Controllers\Academique;

use App\Http\Controllers\Controller;
use App\Models\CreneauHoraire;
use App\Services\Academique\CreneauHoraireService;
use Illuminate\Http\Request;
use Inertia\Inertia;

class CreneauHoraireController extends Controller
{
    protected CreneauHoraireService $service;

    public function __construct(CreneauHoraireService $service)
    {
        $this->service = $service;
    }

    public function index(Request $request)
    {
        $perPage = $request->get('perPage', 10);
        $creneaux = $this->service->getPaginatedList($perPage);

        return Inertia::render('Academique/CreneauHoraire/Index', [
            'creneaux' => $creneaux,
            'flash' => [
                'success' => session('success'),
                'error' => session('error'),
            ],
        ]);
    }

    public function create()
    {
        return Inertia::render('Academique/CreneauHoraire/Create');
    }

    public function store(Request $request)
    {
        $validated = $request->validate([
            'libelle' => 'required|string|max:255|unique:creneaux_horaires,libelle',
            'heure_debut' => 'required|date_format:H:i',
            'heure_fin' => 'required|date_format:H:i|after:heure_debut',
        ]);

        $this->service->create($validated);

        return redirect()->route('creneaux_horaires.index')->with('success', 'Créneau horaire créé avec succès.');
    }

    public function edit(CreneauHoraire $creneauHoraire)
    {
        return Inertia::render('Academique/CreneauHoraire/Edit', [
            'creneauHoraire' => $creneauHoraire,
        ]);
    }

    public function update(Request $request, CreneauHoraire $creneauHoraire)
    {
        $validated = $request->validate([
            'libelle' => 'required|string|max:255|unique:creneaux_horaires,libelle,' . $creneauHoraire->id,
            'heure_debut' => 'required|date_format:H:i',
            'heure_fin' => 'required|date_format:H:i|after:heure_debut',
        ]);

        $this->service->update($creneauHoraire->id, $validated);

        return redirect()->route('creneaux_horaires.index')->with('success', 'Créneau horaire mis à jour avec succès.');
    }

    public function destroy(CreneauHoraire $creneauHoraire)
    {
        $this->service->delete($creneauHoraire->id);
        return redirect()->route('creneaux_horaires.index')->with('success', 'Créneau horaire supprimé avec succès.');
    }
}
